<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="style_main_btn">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
    </style>

    <style name="style_main_text_title">
        <item name="android:textColor">@android:color/black</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="style_main_btn_land">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/btn_text_size_land</item>
    </style>

    <style name="style_main_text_title_land">
        <item name="android:textColor">@android:color/black</item>

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size_land</item>
    </style>
</resources>
